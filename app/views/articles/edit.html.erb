<div class="container">
  <div class="row">
    <div class="col-4 offset-4">
      <h1 class="form-title">Editer : <%= @article.name %> </h1>
      <%= simple_form_for(@article) do |f| %>
        <%= f.input :name %>
        <!-- % @arr_category_code = ['valise', 'cabine', 'sac-a-dos'] %-->
        <!-- % @arr_category_text = ['valise', 'valise cabine', 'sac à dos'] %-->
        <!-- % @category_text = @arr_category_text[@arr_category_code.find_index(@article.category)] %-->
        <%= f.input :category, collection: [['valise', 'valise'], ['valise cabine', 'cabine'], ['sac à dos', 'sac-a-dos']], :selected => @article.category %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :address %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <div class="d-flex justify-content-center">
          <%= f.submit "Enregistrer les modifications", class: "btn btn-flat form-green"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
