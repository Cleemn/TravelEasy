<div class="container container-card-show card-item-show mt-3 p-2 text-center">
  <div class="row p-3">
    <div class="d-flex">
      <div class="col-6">
        <h1><%= @article.name.capitalize %></h1>
        <p><%= @article.description %></p>
        <h6><%= @article.price%>€/j </h6>
      </div>
      <div class="col-6">
        <%= cl_image_tag @article.photo, height: 200, width: 300, crop: :fill %>
      </div>
    </div>
  </div>
  <div class="row d-flex justify-content-left ml-3">
    <div class="">
      <a href="" class="btn btn-primary mx-2">Edit</a>
      <a href="" class="btn btn-danger mx-2">Destroy</a>
      <%= link_to "Retour à la liste", articles_path, class:"btn btn-secondary mx-2" %>
    </div>
  </div>
</div>


